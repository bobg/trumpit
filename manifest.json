{
  "manifest_version": 2,

  "name": "Trumpit",
  "short_name": "Trumpit",
  "description": "This extension makes web mentions of Donald Trump more descriptive",
  "version": "1.2",

  "browser_action": {
    "default_title": "Trumpit"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["trumpit.css"],
      "js": ["trumpit.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
